<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YassirMovies" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/grey_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_light</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar and navigation bar. -->
        <item name="android:statusBarColor">@color/grey_dark</item>
        <item name="android:navigationBarColor">@color/grey_dark</item>
    </style>

    <style name="Theme.Transparent.Fullscreen" parent="Theme.YassirMovies">
        <!-- Transparent status bar. -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@color/transparent</item>

        <item name="actionBarStyle">@style/Theme.Transparent.ActionBar</item>
    </style>

    <style name="Theme.Transparent.ActionBar" parent="Theme.YassirMovies">
        <item name="elevation">0dp</item>
        <item name="background">@color/transparent</item>
    </style>
</resources>